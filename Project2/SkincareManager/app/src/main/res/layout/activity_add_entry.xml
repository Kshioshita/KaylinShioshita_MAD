<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kaylinshioshita.skincaremanager.AddEntryActivity"
    tools:layout_editor_absoluteY="81dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/imageButtonTerrible"
        android:onClick="changeCondition"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonBad"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/terrible" />

    <ImageButton
        android:id="@+id/imageButtonEye"
        android:src="@drawable/eyetoggle"
        android:onClick="toggleStepButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="31dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonOther"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonMask"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/eye" />

    <ImageButton
        android:id="@+id/imageButtonOther"
        android:src="@drawable/othertoggle"
        android:onClick="toggleStepButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="128dp"
        android:layout_marginLeft="16dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:srcCompat="@drawable/other" />

    <ImageButton
        android:id="@+id/imageButtonSun"
        android:src="@drawable/suntoggle"
        android:onClick="toggleStepButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonTreatments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonTreatments"
        app:layout_constraintTop_toTopOf="@+id/imageButtonTreatments"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/sun" />

    <ImageButton
        android:id="@+id/imageButtonMask"
        android:src="@drawable/masktoggle"
        android:onClick="toggleStepButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonEye"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonEye"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/imageButtonEye"
        app:srcCompat="@drawable/mask" />

    <ImageButton
        android:id="@+id/imageButtonEssence"
        android:src="@drawable/essencetoggle"
        android:onClick="toggleStepButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonToner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonToner"
        app:layout_constraintTop_toTopOf="@+id/imageButtonToner"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/essence" />

    <ImageButton
        android:id="@+id/imageButtonTreatments"
        android:src="@drawable/treatmenttoggle"
        android:onClick="toggleStepButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonMoisturizer"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonSun"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonMoisturizer"
        app:layout_constraintTop_toTopOf="@+id/imageButtonMoisturizer"
        app:srcCompat="@drawable/treatment" />

    <ImageButton
        android:id="@+id/imageButtonExfoliator"
        android:src="@drawable/exfoliatortoggle"
        android:onClick="toggleStepButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonWater"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonToner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonWater"
        app:layout_constraintTop_toTopOf="@+id/imageButtonWater"
        app:srcCompat="@drawable/exfoliator" />

    <ImageButton
        android:id="@+id/imageButtonMoisturizer"
        android:src="@drawable/moisturizertoggle"
        android:onClick="toggleStepButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonMask"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonTreatments"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonMask"
        app:layout_constraintTop_toTopOf="@+id/imageButtonMask"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/moisturizer" />

    <ImageButton
        android:id="@+id/imageButtonWater"
        android:src="@drawable/watertoggle"
        android:onClick="toggleStepButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonOil"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonExfoliator"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonOil"
        app:layout_constraintTop_toTopOf="@+id/imageButtonOil"
        app:srcCompat="@drawable/water" />

    <ImageButton
        android:id="@+id/imageButtonOil"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:src="@drawable/stepbutton"
        android:onClick="toggleStepButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="160dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonWater"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oil" />

    <ImageButton
        android:id="@+id/imageButtonToner"
        android:src="@drawable/tonertoggle"
        android:onClick="toggleStepButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonExfoliator"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonEssence"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonExfoliator"
        app:layout_constraintTop_toTopOf="@+id/imageButtonExfoliator"
        app:srcCompat="@drawable/toner" />

    <ImageButton
        android:id="@+id/imageButtonBad"
        android:onClick="changeCondition"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonTerrible"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonFine"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonTerrible"
        app:layout_constraintTop_toTopOf="@+id/imageButtonTerrible"
        app:srcCompat="@drawable/bad" />

    <ImageButton
        android:id="@+id/imageButtonGood"
        android:onClick="changeCondition"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonFine"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonGreat"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonFine"
        app:layout_constraintTop_toTopOf="@+id/imageButtonFine"
        app:srcCompat="@drawable/good" />

    <ImageButton
        android:id="@+id/imageButtonFine"
        android:onClick="changeCondition"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonBad"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonGood"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonBad"
        app:layout_constraintTop_toTopOf="@+id/imageButtonBad"
        app:srcCompat="@drawable/fine" />

    <ImageButton
        android:id="@+id/imageButtonGreat"
        android:onClick="changeCondition"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonGood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonGood"
        app:layout_constraintTop_toTopOf="@+id/imageButtonGood"
        app:srcCompat="@drawable/great" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:lines="2"
        android:text="Water Based Cleanser"
        android:textAlignment="center"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonWater"
        app:layout_constraintStart_toStartOf="@+id/imageButtonWater"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonWater" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="Treatments"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/imageButtonTreatments"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonTreatments" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toner"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonToner"
        app:layout_constraintStart_toStartOf="@+id/imageButtonToner"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonToner" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Moisturizer"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/imageButtonMoisturizer"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonMoisturizer" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text="Sheet Mask"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/imageButtonOther"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonMask" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:text="Other"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonOther" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunscreen"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonSun"
        app:layout_constraintStart_toStartOf="@+id/imageButtonSun"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonSun" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Essence"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonEssence"
        app:layout_constraintStart_toStartOf="@+id/imageButtonEssence"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonEssence" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eye Cream"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonEye"
        app:layout_constraintStart_toStartOf="@+id/imageButtonEye"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonEye" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oil Cleanser"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonOil"
        app:layout_constraintStart_toStartOf="@+id/imageButtonOil"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonOil" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exfoliator"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonExfoliator"
        app:layout_constraintStart_toStartOf="@+id/imageButtonExfoliator"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonExfoliator" />

    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Notes"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checked="true"
        android:text="ToggleButton"
        android:textOff="Evening"
        android:textOn="Morning"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Save"
        android:onClick="saveEntry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
